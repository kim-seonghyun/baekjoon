#include <iostream>
#include <string>

using namespace std;
bool DP[2001][2001];
int str[2001];
int max1 = 0;

int main() {
    cin.tie(NULL);
    ios_base::sync_with_stdio(false);
	int N;
	cin >> N;
	for (int i = 0; i < N; i++) {
		cin >> str[i];
	}
	for (int i = 0; i < N; i++) {
		DP[i][i] = true;
	}

	for (int i = 0; i < N-1; i++) {
		if (str[i] == str[i + 1]) {
			DP[i][i + 1] = true;
		}
	}

	for (int k = 2; k < N; k++) {
		for (int i = 0; i < N- k; i++) {
			int j = i + k;
			if (str[i] == str[j] && DP[i+1][j-1] == true) {
				DP[i][j] = true;
			}
		}
	}
	int M=0,a,b;
    cin >> M;

    for (int i=0; i<M; i++) {
        cin >> a >> b;
        
        if(DP[a-1][b-1]) {
            cout << 1 << '\n';
        }else {
            cout << 0 << '\n';
        }
    }
}
